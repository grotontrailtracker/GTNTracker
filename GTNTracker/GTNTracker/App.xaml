<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GTNTracker.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
                <Setter Property="BorderColor" Value="#BDBDBD" />
                <Setter Property="BorderRadius" Value="2" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="WidthRequest" Value="250" />
                <Setter Property="TextColor" Value="#616161" />
                <!--<Setter Property="BackgroundColor" Value="#E0E0E0" />-->
                <!--<Setter Property="BackgroundColor" Value="#D8D8D8" />-->
                <Setter Property="BackgroundColor" Value="#BDBDBD" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#313131" />
                <Setter Property="FontSize" Value="Medium" />
            </Style>
        </ResourceDictionary>

	</Application.Resources>
</Application>